<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <include layout="@layout/navigation_view"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please select the category you want to see!!!"
            android:textSize="16sp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="25dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:id="@+id/row1"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/business"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/business"/>

                <TextView
                    android:layout_below="@+id/business"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Business"
                    android:textSize="18sp"
                    android:textColor="#000000"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/commentary"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/commentary"/>

                    <TextView
                        android:layout_below="@+id/commentary"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Commentary"
                        android:textSize="18sp"
                        android:textColor="#000000"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/entertainment"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/entertainment"/>

                    <TextView
                        android:layout_below="@+id/entertainment"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Entertainment"
                        android:textSize="18sp"
                        android:textColor="#000000"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/row2"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:layout_below="@id/row1"
                android:layout_marginTop="20dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/health"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/health"/>

                    <TextView
                        android:layout_below="@+id/health"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Health"
                        android:textSize="18sp"
                        android:textColor="#000000"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/life_style"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/life_style"/>

                    <TextView
                        android:layout_below="@+id/life_style"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Life  Style"
                        android:textSize="18sp"
                        android:textColor="#000000"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/politics"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/politics"/>

                    <TextView
                        android:layout_below="@+id/politics"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Politics"
                        android:textSize="18sp"
                        android:textColor="#000000"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/row3"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:layout_below="@+id/row2">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/estante"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/estate"/>

                    <TextView
                        android:layout_below="@+id/estante"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Real Estante"
                        android:textSize="18sp"
                        android:textColor="#000000"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/sport"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/sports"/>

                    <TextView
                        android:layout_below="@+id/sport"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sport"
                        android:textSize="18sp"
                        android:textColor="#000000"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/technology"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/technology"/>

                    <TextView
                        android:layout_below="@+id/technology"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Technology"
                        android:textSize="18sp"
                        android:textColor="#000000"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/row4"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:layout_below="@+id/row3"
                android:layout_marginTop="10dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/travel"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/travel"/>

                    <TextView
                        android:layout_below="@+id/travel"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Travel"
                        android:textSize="18sp"
                        android:textColor="#000000"/>

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>


</android.support.v4.widget.DrawerLayout>